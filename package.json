{
  "name": "bypass-city-extension",
  "version": "1.1.0",
  "description": "Chrome extension for bypass.city - Instantly bypass link shorteners and ad link services",
  "author": "Jayesh Vegda <https://github.com/jayeshvegda>",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js",
    "package": "node scripts/package.js",
    "create-icons": "node scripts/create-icons.js",
    "build": "npm run lint && npm run test"
  },
  "keywords": [
    "chrome-extension",
    "bypass-city",
    "link-bypass",
    "ad-bypass",
    "linkvertise",
    "shortener-bypass",
    "context-menu"
  ],
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!scripts/**"
    ]
  }
}

